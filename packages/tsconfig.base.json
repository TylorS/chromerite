{
  "compilerOptions": {
    "target": "ES2024",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2024", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@browserite/cdp": ["./packages/cdp/src/index.ts"],
      "@browserite/cdp/*": ["./packages/cdp/src/*"],
      "@browserite/launch": ["./packages/launch/src/index.ts"],
      "@browserite/launch/*": ["./packages/launch/src/*"],
      "@browserite/protocol": ["./packages/protocol/src/index.ts"],
      "@browserite/protocol/*": ["./packages/protocol/src/*"],
      "@browserite/server": ["./packages/server/src/index.ts"],
      "@browserite/server/*": ["./packages/server/src/*"]
    }
  }
} 